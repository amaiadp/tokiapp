<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="com.example.amaia.grupo.MostrarSitioPrivado">

    <ImageView
        android:id="@+id/imagenPrivado"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="?attr/actionBarSize"/>

    <TextView
        android:id="@+id/tvnombreprivado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imagenPrivado"
        app:layout_constraintBottom_toTopOf="@id/etnombreprivado"/>

    <EditText
        android:id="@+id/etnombreprivado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/tvdescripcionprivado"
        app:layout_constraintStart_toEndOf="@id/imagenPrivado"
        app:layout_constraintTop_toBottomOf="@id/tvnombreprivado" />

    <TextView
        android:id="@+id/tvdescripcionprivado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:maxLines="3"
        app:layout_constraintTop_toBottomOf="@id/etnombreprivado"
        app:layout_constraintStart_toEndOf="@id/imagenPrivado"
        app:layout_constraintBottom_toTopOf="@id/etdescripcionprivado" />

    <EditText
        android:id="@+id/etdescripcionprivado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:lines="1"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvdescripcionprivado"
        app:layout_constraintStart_toEndOf="@id/imagenPrivado"
        app:layout_constraintBottom_toTopOf="@id/btnmostrarMapaPrivado"/>

    <Button
        android:id="@+id/btnmostrarImagenesPrivado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar \n imágenes"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/imagenPrivado"
        app:layout_constraintEnd_toEndOf="@id/imagenPrivado"
        app:layout_constraintTop_toBottomOf="@id/imagenPrivado"/>

    <TextView
        android:id="@+id/tvTAGprivado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAG"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/imagenPrivado"
        app:layout_constraintTop_toBottomOf="@id/btnmostrarImagenesPrivado"
        app:layout_constraintBottom_toTopOf="@id/etTAGprivado" />

    <EditText
        android:id="@+id/etTAGprivado"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="@id/imagenPrivado"
        app:layout_constraintTop_toBottomOf="@id/tvTAGprivado"
        app:layout_constraintBottom_toTopOf="@id/tvcomentariosprivado" />

    <Button
        android:id="@+id/btnmostrarMapaPrivado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar en Mapa"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/etTAGprivado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etdescripcionprivado"
        app:layout_constraintBottom_toBottomOf="@id/etTAGprivado" />

    <TextView
        android:id="@+id/tvcomentariosprivado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comentarios"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="@id/imagenPrivado"
        app:layout_constraintTop_toBottomOf="@id/etTAGprivado"
        app:layout_constraintBottom_toTopOf="@id/etcomentariosprivado" />

    <EditText
        android:id="@+id/etcomentariosprivado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:inputType="textMultiLine"
        android:lines="1"
        android:maxLines="6"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvcomentariosprivado" />

    <Button
        android:id="@+id/borrar_privado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BORRAR"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/editar_privado"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/editar_privado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDITAR"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toEndOf="@id/borrar_privado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
