<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amaia.grupo.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/main_explorar"
        android:layout_width="220dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#0BA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_missitios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/explorar"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:focusable="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:longClickable="false"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            style="@style/Animation.Design.BottomSheetDialog"
            android:background="#8000"
            android:textColor="#ffffff"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/main_missitios"
        android:layout_width="220dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#0BA"
        app:layout_constraintTop_toBottomOf="@+id/main_explorar"
        app:layout_constraintBottom_toTopOf="@+id/main_añadir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/mis_sitios"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:focusable="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:longClickable="false"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            style="@style/Animation.Design.BottomSheetDialog"
            android:background="#8000"
            android:textColor="#ffffff"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/main_añadir"
        android:layout_width="220dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#0BA"
        app:layout_constraintTop_toBottomOf="@+id/main_missitios"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/añadir"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:focusable="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:longClickable="false"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            style="@style/Animation.Design.BottomSheetDialog"
            android:background="#8000"
            android:textColor="#ffffff"/>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
