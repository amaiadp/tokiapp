<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="com.example.amaia.grupo.MostrarSitioPublico">

        <ImageView
            android:id="@+id/imagenPublico"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvnombrepublico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imagenPublico"
            app:layout_constraintBottom_toTopOf="@id/etnombrepublico"/>

        <EditText
            android:id="@+id/etnombrepublico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@id/tvdescripcionpublico"
            app:layout_constraintStart_toEndOf="@id/imagenPublico"
            app:layout_constraintTop_toBottomOf="@id/tvnombrepublico" />

        <TextView
            android:id="@+id/tvdescripcionpublico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/etnombrepublico"
            app:layout_constraintStart_toEndOf="@id/imagenPublico"
            app:layout_constraintBottom_toTopOf="@id/etdescripcionpublico" />

        <EditText
            android:id="@+id/etdescripcionpublico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:focusable="false"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvdescripcionpublico"
            app:layout_constraintStart_toEndOf="@id/imagenPublico"
            app:layout_constraintBottom_toTopOf="@id/btnmostrarMapaPublico"/>

        <Button
            android:id="@+id/btnmostrarImagenesPublico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar \n imágenes"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/imagenPublico"
            app:layout_constraintEnd_toEndOf="@id/imagenPublico"
            app:layout_constraintTop_toBottomOf="@id/imagenPublico"/>

        <TextView
            android:id="@+id/tvTAG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAG"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/imagenPublico"
            app:layout_constraintTop_toBottomOf="@id/btnmostrarImagenesPublico"
            app:layout_constraintBottom_toTopOf="@id/etTAG" />

        <EditText
            android:id="@+id/etTAG"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:focusable="false"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="@id/imagenPublico"
            app:layout_constraintTop_toBottomOf="@id/tvTAG" />

        <Button
            android:id="@+id/btnmostrarMapaPublico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar en Mapa"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/etTAG"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etdescripcionpublico"
            app:layout_constraintBottom_toBottomOf="@id/etTAG" />

</android.support.constraint.ConstraintLayout>
